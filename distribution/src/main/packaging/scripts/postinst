#
# This script is executed in the post-installation phase
#
#   On Debian,
#       $1=configure : is set to 'configure' and if $2 is set, it is an upgrade
#
#   On RedHat,
#       $1=0         : indicates a removal
#       $1=1         : indicates an upgrade



# Sets the default values for kafka variables used in this script
KAFKA_USER="kafka"
KAFKA_GROUP="kafka"

# Source the default env file
KAFKA_ENV_FILE="${path.env}"
if [ -f "$KAFKA_ENV_FILE" ]; then
    . "$KAFKA_ENV_FILE"
fi

IS_UPGRADE=false

case "$1" in

    # Debian ####################################################
    configure)

        # If $1=configure and $2 is set, this is an upgrade
        if [ -n $2 ]; then
            IS_UPGRADE=true
        fi
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    # RedHat ####################################################
    1)
        # If $1=1 this is an install
        IS_UPGRADE=false
    ;;
    2)
        # If $1=1 this is an upgrade
        IS_UPGRADE=true
    ;;

    *)
        echo "post install script called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

if [ "x$IS_UPGRADE" != "xtrue" ]; then
    if command -v systemctl >/dev/null; then
        echo "### NOT starting on installation, please execute the following statements to configure kafka service to start automatically using systemd"
        echo " sudo systemctl daemon-reload"
        echo " sudo systemctl enable kafka.service"
        echo "### You can start kafka service by executing"
        echo " sudo systemctl start kafka.service"

    elif command -v chkconfig >/dev/null; then
        echo "### NOT starting on installation, please execute the following statements to configure kafka service to start automatically using chkconfig"
        echo " sudo chkconfig --add kafka"
        echo "### You can start kafka service by executing"
        echo " sudo service kafka start"

    elif command -v update-rc.d >/dev/null; then
        echo "### NOT starting on installation, please execute the following statements to configure kafka service to start automatically using chkconfig"
        echo " sudo update-rc.d kafka defaults 95 10"
        echo "### You can start kafka service by executing"
        echo " sudo /etc/init.d/kafka start"
    fi
elif [ "$RESTART_ON_UPGRADE" = "true" ]; then

    echo -n "Restarting kafka service..."
    if command -v systemctl >/dev/null; then
        systemctl daemon-reload
        systemctl restart kafka.service || true

    elif [ -x /etc/init.d/kafka ]; then
        if command -v invoke-rc.d >/dev/null; then
            invoke-rc.d kafka stop || true
            invoke-rc.d kafka start || true
        else
            /etc/init.d/kafka restart || true
        fi

    # older suse linux distributions do not ship with systemd
    # but do not have an /etc/init.d/ directory
    # this tries to start the kafka service on these
    # as well without failing this script
    elif [ -x /etc/rc.d/init.d/kafka ] ; then
        /etc/rc.d/init.d/kafka restart || true
    fi
    echo " OK"
fi

chown -R $KAFKA_USER:$KAFKA_GROUP /var/lib/kafka
chown -R $KAFKA_USER:$KAFKA_GROUP /var/log/kafka
chown -R root:$KAFKA_GROUP /etc/kafka
chmod 0750 /etc/kafka
chmod 0750 /etc/kafka/scripts

if [ -f /etc/sysconfig/kafka ]; then
   chmod 0644 /etc/sysconfig/kafka
fi

${scripts.footer}
